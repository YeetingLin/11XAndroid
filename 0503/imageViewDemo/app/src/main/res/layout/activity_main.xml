<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/rgImages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rdbDog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="小狗" />

        <RadioButton
            android:id="@+id/rdbElephant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="大象" />

        <RadioButton
            android:id="@+id/rdbMouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="老鼠" />

        <RadioButton
            android:id="@+id/rdbRabbit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="兔子" />

        <LinearLayout
            android:id="@+id/imgOutput1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>
    </RadioGroup>

    <ImageView
        android:id="@+id/imgOutput1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="84dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgImages"
        app:srcCompat="@mipmap/dog"
        tools:ignore="DuplicateIds" />

    <ImageView
        android:id="@+id/imgOutput2"
        android:layout_width="235dp"
        android:layout_height="115dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="152dp"
        android:src="@tools:sample/avatars"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgOutput1"
        tools:srcCompat="@mipmap/elephant" />

    <ImageView
        android:id="@+id/imgOutput3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@tools:sample/avatars"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.118"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="517dp"
        tools:srcCompat="@mipmap/mouse"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imgOutput4"
        android:layout_width="55dp"
        android:layout_height="67dp"
        android:src="@tools:sample/avatars"
        app:srcCompat="@mipmap/rabbit"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="667dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>